    <div class="container mt-5 pt-5">
        <header>
            <h1>Books Online
                <small>Market Place de Livros  </small>
            </h1>
        </header>
        <!-- =============== Cadastro ================== -->
        <div class="row">
            <div class="col-md-12 col-sm-12 col-lg-8">
                <div class="card">
                     <div class="card-body">
                        <h4 class="card-title">Preencha todos os campos</h4>
                        <form class="form" action="" method="POST">
                            <fieldset>
                                <legend>Cadastre-se</legend>
                            <ul class="list-unstyled">
                                <li>
                                    <label>Nome:</label>
                                    <input class="form-control" name="cad_nome" id="nome_cadastro" >
                                </li>
                                <li>
                                    <label>Email:</label>
                                    <input class="form-control" name="cad_email" id="email_cadastro" >
