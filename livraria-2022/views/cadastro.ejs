                                <li>
                                    <label>Telefone:</label>
                                    <input class="form-control" name="cad_telefone" id="telefone_cadastro" >
                                </li>
                                <li>
                                    <label>Senha:</label>
                                    <input class="form-control" type="password" name="cad_senha" id="senha_cadastro" >
                                </li>
                                <li>
                                    <label>Confirme a Senha:</label>
                                    <input class="form-control" type="password" name="conf_senha" id="conf_senha_cadastro" >
                                </li>
                                <li>
                                    <button class="btn btn-info mt-5">Confirmar</button>
                                </li>
                            </ul>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>

