
    <%-include('../header.ejs')%>
    <%-include('nav-adm.ejs')%>
    
    <!-- =============== Conteúdo ================== -->
    <div class="container mt-5 pt-5">
        <header>
            <h1>Books Online
                <small>Market Place de Livros </small>
            </h1>
        </header>
        <!--form contato-->
        <h2 class="alert alert-info">Atualizar Promoções</h2>
        <form action="./atualiza-promo" method="GET" class="mt-5 mb-5">
           
            <div class="form-group">
              <label for="promo">Adicionar a lista de promoções?</label>
              <input type="radio" class="col-lg-2" value="1" id="promo_sim"  name="promo">Sim
              <input type="radio" class="col-lg-2" value="0" id="promo_nao"  name="promo">Não
            </div>
            <div class="form-group">
              <label for="livro">livro: </label>
              <select name="id">
              <%galeria.forEach((item)=>{%>
              <option value="<%=item.livros_id%>"><%=item.titulo%></option>
              <% }) %>
            </select>
            </div>
            <button type="submit" class="btn btn-primary">Confirmar</button>
             
          </form>
          <!--fim form contato-->
        <!-- =============== Produtos ================== -->
        <div class="row">
            <!--inicio da Single-->
            <div class="col-md-16 col-sm-16 col-lg-3 livro">
                <div class="card">
                    <img class="card-img-top w-50" src="books/<%=galeria[0].imagem%>" alt="Card image cap">
                    <div class="card-body">
                        <h4 class="card-title"><%=galeria[0].titulo%></h4>
                        <p class="card-text"><%=galeria[0].resumo%></p>
                        <h2>R$ <%=galeria[0].valor%></h2>
                        <a href="carrinho/?id=<%=galeria[0].livros_id%>" class="btn btn-primary">Adicionar ao carrinho</a>
                    </div>
                </div>
            </div>
           
           </div>
           <!--fim da single-->
        <!-- =============== Fim dos Produtos ================== -->

        <!-- =============== Paginação ================== -->
        <nav>
            <ul class="pagination">
                <li class="page-item">
                    <a class="page-link" href="#" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                        <span class="sr-only">Previous</span>
                    </a>
                </li>
                <li class="page-item active">
                    <a class="page-link" href="#">1</a>
                </li>
                <li class="page-item">
                    <a class="page-link" href="#">2</a>
                </li>
                <li class="page-item">
                    <a class="page-link" href="#">3</a>
                </li>
                <li class="page-item">
                    <a class="page-link" href="#" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                        <span class="sr-only">Next</span>
                    </a>
                </li>
            </ul>
        </nav>
        <!-- =============== Fim da Paginação ================== -->
    </div>
    <!-- =============== Fim do Conteúdo ================== -->

